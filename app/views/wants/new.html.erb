<div class="main mt-5">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="logo-img mx-auto"></h2>
        <p class="text-secondary h3 mb-3">いきたいところ・したいこと</p>
      </div>
     <%= form_with(model: @want) do |f| %>
     <%= render 'layouts/error_messages', model: f.object %> 

        <div class="form-group mt-5 mx-5">
       <%= f.label :prefecture_id, '都道府県' %>
       <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
        </div>

        <div class="form-group mt-2 mx-5">
          <%= f.label :content, 'したいこと' %>
          <%= f.text_area :content, class: 'form-control', rows: 3 %>
        </div>

        
        <div class="actions mx-5 mt-2 mb-5">
          <%= f.submit 'ついかする', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>